{
  "compilerOptions": {
    "declaration": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "module": "ES2020",
    "importHelpers": true,
    "outDir": "./lib",
    "pretty": true,
    "rootDirs": [
      "./src"
    ],
    "strict": true,
    "target": "ES2021"
  },
  "ts-node": {
    "esm": true
  },
  "include": [
    "./src/**/*"
  ]
}
